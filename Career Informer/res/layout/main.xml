<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android"
        android:background="#dbd9d8">
    <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="33dp" android:layout_gravity="center_horizontal|top"
            android:background="@android:color/background_light" android:orientation="horizontal"
            android:layout_alignParentLeft="true" android:layout_marginLeft="0dp" android:layout_alignParentTop="true"
            android:layout_marginTop="0dp" android:id="@+id/relativeLayout">
        <Button
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/buttonHome" android:layout_gravity="right" android:background="@drawable/buton_home"
                android:layout_alignParentLeft="true" android:layout_marginLeft="0dp"
                android:layout_alignParentTop="true" android:layout_marginTop="0dp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/textHeader" android:layout_centerVertical="true" android:layout_centerHorizontal="true"
                android:text="Menu Utama" android:textColor="#000000" android:textStyle="bold|italic"
                android:textSize="20sp"/>
    </RelativeLayout>
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/scrollView" android:layout_below="@+id/relativeLayout">
        <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" android:layout_below="@+id/relativeLayout">
            <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="160sp"
                          android:layout_gravity="center_horizontal|top" android:background="@android:color/background_light" android:id="@+id/linearLayout"
                          android:layout_below="@+id/relativeLayout" android:layout_alignParentLeft="true"
                          android:layout_marginTop="3dp">
                <Button android:layout_width="fill_parent" android:layout_height="fill_parent"
                        android:id="@+id/buttonJob" android:layout_gravity="center_vertical|right" android:layout_weight="1"
                        android:background="@drawable/button_lowongan"/>
                <Button android:layout_width="fill_parent" android:layout_height="fill_parent"
                        android:id="@+id/buttonCJob" android:layout_gravity="center_vertical|right" android:layout_weight="1"
                        android:background="@drawable/button_clowongan"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="160sp" android:layout_gravity="center_horizontal|bottom"
                    android:background="@android:color/background_light" android:baselineAligned="false"
                    android:layout_below="@+id/linearLayout2" android:layout_alignParentLeft="true"
                    android:layout_marginTop="3dp">
                <Button android:layout_width="fill_parent" android:layout_height="fill_parent"
                        android:id="@+id/buttonArticel" android:layout_gravity="center_vertical|right" android:layout_weight="1"
                        android:background="@drawable/button_articel"/>
                <Button android:layout_width="fill_parent" android:layout_height="fill_parent"
                        android:id="@+id/buttonHelp" android:background="@drawable/buton_help" android:layout_gravity="center_vertical|right"
                        android:layout_weight="1"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="160dp" android:layout_gravity="center" android:background="@android:color/background_light"
                    android:layout_below="@+id/linearLayout" android:layout_alignParentLeft="true"
                    android:layout_marginTop="3dp" android:id="@+id/linearLayout2">
                <Button android:layout_width="fill_parent" android:layout_height="fill_parent"
                        android:id="@+id/buttonPeople" android:layout_gravity="center_vertical|right"
                        android:layout_weight="1" android:background="@drawable/button_people"/>
                <Button android:layout_width="fill_parent" android:layout_height="fill_parent"
                        android:id="@+id/buttonCPeople" android:layout_gravity="center_vertical|right" android:layout_weight="1"
                        android:background="@drawable/buton_cpeople"/>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>