<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent" android:background="#dbd9d8">

    <RelativeLayout android:layout_width="fill_parent" android:layout_height="33dp"
                    android:layout_gravity="center_horizontal|top"
                    android:background="@android:color/background_light" android:orientation="horizontal"
                    android:layout_alignParentLeft="true" android:layout_marginLeft="0dp"
                    android:layout_alignParentTop="true" android:layout_marginTop="0dp"
                    android:id="@+id/relativeLayout">
        <Button android:layout_width="40dp" android:layout_height="40dp" android:id="@+id/buttonHome"
                android:layout_gravity="right" android:background="@drawable/buton_home"
                android:layout_alignParentLeft="true" android:layout_marginLeft="0dp"
                android:layout_alignParentTop="true" android:layout_marginTop="0dp"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:textAppearance="?android:attr/textAppearanceMedium" android:id="@+id/textHeader"
                  android:layout_centerVertical="true" android:layout_centerHorizontal="true"
                  android:text="Data Diri" android:textColor="#000000" android:textStyle="bold|italic"
                  android:textSize="20sp"/>
    </RelativeLayout>
    <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/scrollView" android:layout_below="@+id/relativeLayout">
        <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="900dp" android:layout_below="@+id/relativeLayout">
            <Button
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:id="@+id/button" android:layout_alignParentTop="true" android:layout_centerHorizontal="true"
                    android:layout_marginTop="3dp" android:background="@drawable/button_pp" android:text="unggah foto"
                    android:textAlignment="gravity" android:textSize="20sp" android:textStyle="italic"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:textAppearance="?android:attr/textAppearanceLarge" android:text="Nama Depan"
                      android:id="@+id/textView" android:textSize="20sp" android:textColor="#000000"
                      android:layout_below="@+id/button" android:layout_alignParentLeft="true"
                      android:layout_marginTop="2dp"/>
            <EditText
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/editText" android:layout_below="@+id/textView" android:layout_alignParentLeft="true"
                    android:inputType="text"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:textAppearance="?android:attr/textAppearanceLarge" android:text="Nama Belakang"
                      android:id="@+id/textView2" android:textSize="20sp" android:textColor="#000000"
                      android:layout_below="@+id/editText" android:layout_alignParentLeft="true"/>
            <EditText
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/editText2" android:layout_below="@+id/textView2"
                    android:layout_alignParentLeft="true"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:textAppearance="?android:attr/textAppearanceLarge" android:text="Jenis Kelamin"
                      android:id="@+id/textView3" android:textSize="20sp" android:textColor="#000000"
                      android:layout_below="@+id/editText10" android:layout_alignParentLeft="true"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:textAppearance="?android:attr/textAppearanceLarge" android:text="HP / Telepon"
                      android:id="@+id/textView4" android:textSize="20sp" android:textColor="#000000"
                      android:layout_alignParentLeft="true" android:layout_below="@+id/editText11"/>
            <EditText android:layout_width="fill_parent" android:layout_height="wrap_content" android:id="@+id/editText3"
                      android:layout_below="@+id/textView4" android:layout_alignParentLeft="true"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:textAppearance="?android:attr/textAppearanceLarge" android:text="E-mail"
                      android:id="@+id/textView5" android:textSize="20sp" android:textColor="#000000"
                      android:layout_below="@+id/editText3" android:layout_alignParentLeft="true"/>
            <EditText android:layout_width="fill_parent" android:layout_height="wrap_content" android:id="@+id/editText4"
                      android:layout_alignParentBottom="false" android:layout_alignParentLeft="false"
                      android:layout_below="@+id/textView5"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:textAppearance="?android:attr/textAppearanceLarge" android:text="Pendidikan"
                      android:id="@+id/textView6" android:textSize="20sp" android:textColor="#000000"
                      android:layout_below="@+id/editText4" android:layout_alignParentLeft="false"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:textAppearance="?android:attr/textAppearanceLarge" android:text="Universitas / Perguruan Tinggi"
                      android:id="@+id/textView7" android:textSize="20sp" android:textColor="#000000"
                      android:layout_below="@+id/textView6" android:layout_alignParentLeft="true"/>
            <EditText android:layout_width="fill_parent" android:layout_height="wrap_content"
                      android:id="@+id/editText5" android:layout_alignParentBottom="false"
                      android:layout_alignParentLeft="false" android:layout_below="@+id/textView7"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:textAppearance="?android:attr/textAppearanceLarge" android:text="Jenjang - Jurusan"
                      android:id="@+id/textView8" android:textSize="20sp" android:textColor="#000000"
                      android:layout_below="@+id/editText5" android:layout_alignParentLeft="true"/>
            <EditText android:layout_width="fill_parent" android:layout_height="wrap_content"
                      android:id="@+id/editText6" android:layout_alignParentBottom="false"
                      android:layout_alignParentLeft="false" android:layout_below="@+id/textView8"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:textAppearance="?android:attr/textAppearanceLarge" android:text="Tahun Lulus"
                      android:id="@+id/textView9" android:textSize="20sp" android:textColor="#000000"
                      android:layout_below="@+id/editText6" android:layout_alignParentLeft="true"/>
            <EditText android:layout_width="fill_parent" android:layout_height="wrap_content"
                      android:id="@+id/editText7" android:layout_alignParentBottom="false"
                      android:layout_alignParentLeft="false" android:layout_below="@+id/textView9"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:textAppearance="?android:attr/textAppearanceLarge" android:text="Keterampilan / Keahlian"
                      android:id="@+id/textView10" android:textSize="20sp" android:textColor="#000000"
                      android:layout_below="@+id/editText7" android:layout_alignParentLeft="true"/>
            <EditText android:layout_width="fill_parent" android:layout_height="300dp"
                      android:id="@+id/editText8" android:layout_alignParentBottom="false"
                      android:layout_alignParentLeft="false" android:layout_below="@+id/textView10"/>
            <Button
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Posting"
                    android:id="@+id/button2" android:layout_below="@+id/editText9"
                    />
            <Button android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="Batal"
                    android:id="@+id/button3" android:layout_below="@+id/button2"
                    />
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:textAppearance="?android:attr/textAppearanceLarge" android:text="Pengalaman"
                      android:id="@+id/textView11" android:textSize="20sp" android:textColor="#000000"
                      android:layout_below="@+id/editText8" android:layout_alignParentLeft="true"/>
            <EditText android:layout_width="fill_parent" android:layout_height="300dp" android:id="@+id/editText9"
                      android:layout_alignParentBottom="false" android:layout_alignParentLeft="false"
                      android:layout_below="@+id/textView11"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:textAppearance="?android:attr/textAppearanceLarge" android:text="Umur"
                      android:id="@+id/textView12" android:textSize="20sp" android:textColor="#000000"
                      android:layout_below="@+id/editText2" android:layout_alignParentLeft="true"/>
            <EditText android:layout_width="fill_parent" android:layout_height="wrap_content"
                      android:id="@+id/editText10" android:layout_below="@+id/textView12"
                      android:layout_alignParentLeft="true" android:layout_alignParentRight="true"/>
            <EditText android:layout_width="fill_parent" android:layout_height="wrap_content"
                      android:id="@+id/editText11" android:layout_below="@+id/textView3"
                      android:layout_alignParentLeft="true" android:layout_alignParentRight="true"/>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>