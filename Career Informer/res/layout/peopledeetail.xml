<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent" android:background="#ffffff">

    <RelativeLayout android:layout_width="fill_parent" android:layout_height="33dp"
                    android:layout_gravity="center_horizontal|top" android:background="@android:color/background_light"
                    android:orientation="horizontal" android:layout_alignParentLeft="true"
                    android:layout_marginLeft="0dp" android:layout_alignParentTop="true" android:layout_marginTop="0dp"
                    android:id="@+id/relativeLayout">
        <Button android:layout_width="40dp" android:layout_height="40dp" android:id="@+id/buttonHome"
                android:layout_gravity="right" android:background="@drawable/buton_home" android:layout_alignParentLeft="true"
                android:layout_marginLeft="0dp" android:layout_alignParentTop="true" android:layout_marginTop="0dp"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:textAppearance="?android:attr/textAppearanceMedium" android:id="@+id/textHeader"
                  android:text="Profil Detail" android:textColor="#000000" android:textStyle="bold|italic"
                  android:textSize="20sp" android:layout_alignParentBottom="true"
                  android:layout_centerHorizontal="true"/>
    </RelativeLayout>
    <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/scrollView"
            android:layout_toRightOf="@+id/textView2" android:layout_below="@+id/relativeLayout">
        <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" android:layout_below="@+id/relativeLayout">
            <ImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:id="@+id/imageView"
                    android:background="@drawable/pp1"
                    android:layout_alignParentTop="true" android:layout_centerHorizontal="true"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Nama : Nama Lengkap"
                    android:id="@+id/textView"
                    android:textColor="#000000"
                    android:textSize="20sp" android:layout_below="@+id/imageView"
                    android:layout_alignParentLeft="true"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:textAppearance="?android:attr/textAppearanceMedium" android:text="Umur  : .."
                      android:id="@+id/textView2" android:textColor="#000000"
                      android:textSize="20sp" android:layout_below="@+id/textView" android:layout_alignLeft="@+id/textView"
                      android:layout_marginTop="5dp"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:textAppearance="?android:attr/textAppearanceMedium" android:text="Pendidikan : SMA/SMK/S1"
                      android:id="@+id/textView3" android:textColor="#000000"
                      android:textSize="20sp" android:layout_below="@+id/textView11"
                      android:layout_marginTop="5dp"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:textAppearance="?android:attr/textAppearanceMedium" android:text="Alamat : Jl........."
                      android:id="@+id/textView4" android:textColor="#000000"
                      android:textSize="20sp" android:layout_below="@+id/textView12"
                      android:layout_marginTop="5dp"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:textAppearance="?android:attr/textAppearanceMedium" android:text="Ketrampilan :"
                      android:id="@+id/textView5" android:textColor="#000000" android:textSize="20sp"
                      android:layout_below="@+id/textView4" android:layout_alignParentLeft="true"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:textAppearance="?android:attr/textAppearanceMedium" android:text="------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------"
                      android:id="@+id/textView7" android:textColor="#000000" android:textSize="20sp"
                      android:layout_below="@+id/textView5" android:layout_alignParentLeft="true"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:textAppearance="?android:attr/textAppearanceMedium" android:text="Pengalaman :"
                      android:id="@+id/textView6" android:textColor="#000000" android:textSize="20sp"
                      android:layout_below="@+id/textView7" android:layout_alignParentLeft="true"
                      android:layout_marginTop="3dp"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:textAppearance="?android:attr/textAppearanceMedium"
                      android:text="-----------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------"
                      android:id="@+id/textView8" android:textColor="#000000" android:textSize="20sp"
                      android:layout_below="@+id/textView6" android:layout_alignParentLeft="true"
                      android:layout_marginTop="3dp"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:textAppearance="?android:attr/textAppearanceMedium" android:text="Kontak :"
                      android:id="@+id/textView9" android:textColor="#000000" android:textSize="20sp"
                      android:layout_below="@+id/textView8" android:layout_alignParentLeft="true"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:textAppearance="?android:attr/textAppearanceMedium" android:text="-----------------------------------"
                      android:id="@+id/textView10" android:textColor="#000000" android:textSize="20sp"
                      android:layout_below="@+id/textView9" android:layout_alignParentLeft="true"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:textAppearance="?android:attr/textAppearanceMedium" android:text="Jenis Kelamin  : .."
                      android:id="@+id/textView11" android:textColor="#000000" android:textSize="20sp"
                      android:layout_below="@+id/textView2"
                      android:layout_marginTop="5dp"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:textAppearance="?android:attr/textAppearanceMedium" android:text="Tahun Lulus : ..."
                      android:id="@+id/textView12" android:textColor="#000000" android:textSize="20sp"
                      android:layout_below="@+id/textView3" android:layout_marginTop="5dp"/>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>